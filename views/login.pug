extends layout

include utils.pug

append head
  //- add page specific styles by appending to the head
  link(rel="stylesheet" href="/stylesheets/login-signup.css")
  //- add page specific js

block content

  div(id= "form") 

    h2 Sign in
    h4 Enter the email address and password associated with your account.

    form(method="post" action="/login" class='authForm')

      input(type="hidden" name="_csrf" value=csrfToken)

      +field("Your email", "email", email, "text", true)
      +field("Your password", "password", '', "password", true)

      button Continue
      div
        p Don't have an account yet? 
        a(href="/signup") Create one
        |  or 
        a(href="/login/demo") Login as demo
      